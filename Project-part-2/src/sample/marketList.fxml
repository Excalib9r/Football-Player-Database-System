         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="151.0" layoutY="75.0" prefHeight="38.0" prefWidth="254.0" style="-fx-background-color: #b5225b;" text="Buy Player" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="playerName" layoutX="464.0" layoutY="75.0" prefHeight="38.0" prefWidth="232.0" promptText="Input Player Name" />
      <Button fx:id="refresh" layoutX="797.0" layoutY="535.0" mnemonicParsing="false" onAction="#callRefresh" text="Refresh">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
