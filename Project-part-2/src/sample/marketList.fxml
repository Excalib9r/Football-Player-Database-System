<AnchorPane prefHeight="596.0" prefWidth="891.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MarketListController">
   <children>
      <ImageView fitHeight="596.0" fitWidth="946.0" pickOnBounds="true">
         <image>
            <Image url="@../images/1.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="tableView" layoutX="-1.0" layoutY="184.0" opacity="0.76" prefHeight="312.0" prefWidth="947.0" style="-fx-background-color: #330000;">
        <columns>
          <TableColumn fx:id="name" minWidth="70.0" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="country" minWidth="30.0" prefWidth="75.0" text="Country" />
            <TableColumn fx:id="club" minWidth="30.0" prefWidth="75.0" text="Club" />
            <TableColumn fx:id="position" prefWidth="116.79998779296875" text="Position" />
            <TableColumn fx:id="number" prefWidth="120.0" text="Number" />
            <TableColumn fx:id="height" prefWidth="75.0" text="Height(Meter)" />
            <TableColumn fx:id="age" prefWidth="75.0" text="Age(Year)" />
            <TableColumn fx:id="salary" minWidth="30.0" prefWidth="75.0" text="Weekly Salary(Dollar)" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
